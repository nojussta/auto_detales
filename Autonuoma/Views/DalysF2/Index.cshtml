@model IEnumerable<Org.Ktu.Isk.P175B602.Autonuoma.Models.DalysF2.DalysL>

@* this will also be used as page title in main layout *@
@{
    ViewData["title"] = "Dalys (F2)";
}

@* content header *@
<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
    </span>
</div>

@* content itself *@
<div class="main-content-lst">
    <table class="entity-list">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.DaliesSritis)

                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Dalis)

                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FkSpec)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.DaliesSritis)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Dalis)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.FkSpec)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ID })"
                           class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Redaguoti</a>

                        <a href="@Url.Action("Delete", new { id = item.ID })"
                           class="btn btn-danger"><i class="fa-solid fa-trash"></i> Šalinti</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>